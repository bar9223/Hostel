{% extends 'base.html.twig' %}

{% block title %}
    Weather checker
{% endblock %}

{% block content %}
    <section class="vh-50" style="background-color: #4B515D;display: flex;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card" style="color: #4B515D; border-radius: 35px;">
                        <h3 style="text-align: center; margin-top:10px;">OpenWeatherApi</h3>
                        <div class="card-body p-4">

                            <div class="d-flex">
                                <h6 class="flex-grow-1">{{ open_weather.city }}</h6>
                                <h6>{{ open_weather.time }}</h6>
                            </div>

                            <div class="d-flex flex-column text-center mt-5 mb-4">
                                <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> {{ open_weather.temp }}째C </h6>
                                <span class="small" style="color: #868B94">{{ open_weather.main_info }}</span>
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1" style="font-size: 1rem;">
                                    <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i> <span class="ms-1"> {{ open_weather.speed }} km/h</span></div>
                                    <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i> <span class="ms-1"> {{ open_weather.humidity }} %</span></div>
                                </div>
                                <div class="col-sm">
                                    <img src="http://openweathermap.org/img/wn/{{ open_weather.image }}@2x.png" alt="Open Weather">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card" style="color: #4B515D; border-radius: 35px;">
                        <h3 style="text-align: center; margin-top:10px;">WeatherApi</h3>
                        <div class="card-body p-4">
                            <div class="d-flex">
                                <h6 class="flex-grow-1">{{ weather_api.city }}</h6>
                                <h6>{{ weather_api.time }}</h6>
                            </div>
                            <div class="d-flex flex-column text-center mt-5 mb-4">
                                <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> {{ weather_api.temp }}째C </h6>
                                <span class="small" style="color: #868B94">{{ weather_api.main_info }}</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1" style="font-size: 1rem;">
                                    <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i> <span class="ms-1"> {{ weather_api.speed }} km/h</span></div>
                                    <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i> <span class="ms-1"> {{ weather_api.humidity }} %</span></div>
                                </div>
                                <div class="col-sm">
                                    <a href="https://www.weatherapi.com/" title="Free Weather API"><img src="{{ weather_api.image }}" alt="Open Weather"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <section>
        <h3 style="text-align: center">Avg. temperature: {{ avg_temp }}째C</h3>
    </section>
    <section>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Recent searches / ID</th>
                    <th scope="col">City</th>
                    <th scope="col">Temperature</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                {% for search in searches %}
                    <tr>
                        <th scope="row">{{ search.id }}</th>
                        <td>{{ search.city }}</td>
                        <td>{{ search.temp }}째C</td>
                        <td>{{ search.date }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}